# Supabase (client keys)
NEXT_PUBLIC_SUPABASE_URL="https://YOUR-PROJECT.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="YOUR_SUPABASE_ANON_KEY"

# Prisma (SQLite)
DATABASE_URL="file:./prisma/dev.db"

# App base URL (for SMS/email links)
APP_BASE_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Cron (set true to run hourly alert checks in the Next.js server process)
RUN_CRON="false"

# Twilio (SMS)
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your_auth_token"
TWILIO_FROM_NUMBER="+1234567890"
TWILIO_PHONE_NUMBER="+1234567890"

# SMTP (Pre-alert email)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="user@example.com"
SMTP_PASS="your_smtp_password"
SMTP_FROM="Still Alive? <noreply@stillalive.app>"
EMAIL_FROM="Still Alive? <noreply@stillalive.app>"

# Last Words encryption (required)
# Generate a bcrypt salt and keep both values secret:
# - `node -e "console.log(require('bcryptjs').genSaltSync(12))"`
LAST_WORDS_ENC_PASSWORD="change-me"
LAST_WORDS_BCRYPT_SALT="$2a$12$replace_this_with_a_real_salt_string"
